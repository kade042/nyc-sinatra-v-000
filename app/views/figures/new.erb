<h2>Create New Figure!!!</h2>
<form action="/figures" method="post">
  <label>Figure Name:</label><br>
  <input type="text" name="figure[name]" id="figure_name">
  <br><br>
  <label>Title:</label><br>
  <% Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%=title.id%>"><%= title.name %><br>
  <% end %>
  <br><br>
  <label>Landmark:</label><br>
  <% Landmark.all.each do |land|%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= land.id %>" id="landmark_<%=land.id%>"><%= land.name %><br>
  <% end %>
  <br><br>
  <label> Create new title</label><br>
  <input type="text" name="title[name]" id="new_title"><br>

  <label> Create new landmark</label><br>
  <input type="text" name="landmark[name]" id="new_landmark"><br><br>

  <input type="submit" value="Create New Figure">
</form>
