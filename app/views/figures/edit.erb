<h2>Edit Figures!!!</h2>
<form action="/figures/<%= @figure.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="figure_name">Figure Name:</label><br>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br><br>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="<%=title.id%>" value="<%=title.id%>"><%= title.name %><br>
  <% end %>
  <br><br>
  <label>Create new landmark</label><br>
  <input type="text" name="landmark[name]" id="new_landmark"><br>
  <input type="submit" value="Edit Figure">
</form>
